<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title><%= gettext('Accounts are linked') %></title>
  <meta name="viewport" content="initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,width=device-width" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <!--[if lt IE 9]>
    <%- cachify_js('/js/lib/html5shim.min.js') %>
  <![endif]-->

  <%- cachify_css('/css/style.min.css') %>
</head>
<body class="email_landing">
    <header id="header">
       <h1><a class="home" target="_blank" href="/">Mozilla Persona Home</a></h1>
    </header>

<div id="hAlign">
  <div id="vAlign">
    <% if (error) { %>
        <div id="token-error">
          <h2><%= gettext('Authentication Error') %></h2>
          <p><%= error %></p>
        </div>
    <% } else { %>
        <div id="congrats">
            <h2><%= gettext('Accounts are linked') %></h2>

            <p><%= format(gettext('Success! %(claimed)s is now linked with %(other)s. Please close this window and return to the original website to sign in.'),
            { claimed: claimed, other: other }) %></p>

            <p><%= gettext("Please close this page and return to the website you were signing in from.") %></p>
        </div><!-- #congrats -->
    <% } %>
  </div>
</div>
</body>
</html>
